# === CONFIGURATION PRODUCTION ASTROLAB ===
APP_NAME="Astrolab"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=Europe/Paris
APP_URL=https://votre-domaine.com

# Configuration locale
APP_LOCALE=fr
APP_FALLBACK_LOCALE=fr
APP_FAKER_LOCALE=fr_FR

# Maintenance et workers
APP_MAINTENANCE_DRIVER=cache
APP_MAINTENANCE_STORE=redis
PHP_CLI_SERVER_WORKERS=8

# Sécurité - Augmentation rounds bcrypt pour production
BCRYPT_ROUNDS=15

# === LOGS PRODUCTION ===
LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_SECURITY_CHANNEL=security

# === BASE DE DONNÉES PRODUCTION ===
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=astrolab_production
DB_USERNAME=astrolab_user
DB_PASSWORD=

# === REDIS PRODUCTION ===
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# === CACHE PRODUCTION ===
CACHE_STORE=redis
CACHE_PREFIX=astrolab_cache
MEMCACHED_HOST=127.0.0.1

# === SESSIONS PRODUCTION ===
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.votre-domaine.com
SESSION_SAME_SITE=lax
SESSION_SECURE=true
SESSION_PARTITIONED=true

# === STORAGE & QUEUE ===
BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# === MAIL PRODUCTION ===
MAIL_MAILER=smtp
MAIL_SCHEME=tls
MAIL_HOST=smtp.your-email-provider.com
MAIL_PORT=587
MAIL_USERNAME=noreply@votre-domaine.com
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@votre-domaine.com
MAIL_FROM_NAME="Astrolab"
MAIL_ADMIN_EMAIL=admin@votre-domaine.com

# === AWS S3 PRODUCTION ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-3
AWS_BUCKET=astrolab-production
AWS_USE_PATH_STYLE_ENDPOINT=false

# === FRONT-END ===
VITE_APP_NAME="${APP_NAME}"

# === PAIEMENTS PRODUCTION ===
PAYMENT_PROCESSOR=stripe

# Stripe Production
STRIPE_ENABLED=true
STRIPE_PUBLISHABLE_KEY=pk_live_
STRIPE_SECRET_KEY=sk_live_
STRIPE_WEBHOOK_SECRET=whsec_

# PayPal Production (optionnel)
PAYPAL_ENABLED=false
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_SANDBOX=false

# Lyra/PayZen Production (optionnel)
LYRA_ENABLED=false
LYRA_SHOP_ID=
LYRA_KEY_TEST=
LYRA_KEY_PROD=
LYRA_ENDPOINT=https://api.payzen.eu

# === SÉCURITÉ PRODUCTION ===
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
CSRF_PROTECTION_ENABLED=true
XSS_PROTECTION_ENABLED=true

# === MONITORING PRODUCTION ===
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false
HORIZON_ENABLED=true

# === MÉTRIQUES ET ANALYTICS ===
GOOGLE_ANALYTICS_ID=
PIXEL_FACEBOOK_ID=

# === BACKUP PRODUCTION ===
BACKUP_DISK=s3
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
